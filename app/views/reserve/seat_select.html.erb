<div id="date-btn">
  <%= link_to image_tag('date.png'), root_url %>
</div>
<div id="room-select">
  <div id="room">Room<span class="space">&thinsp;</span></div>
  <div id="btn-a">A<span class="space">&thinsp;</span></div>
  <div id="btn-b">B<span class="space">&thinsp;</span></div>
</div>
<div id="seat-select">
  <div id="screen">
    Screen<span class="space">&thinsp;</span>
  </div>
  <% @attrs.each_with_index do |f, i| %>
    <div id="seat-<%= i + 1 %>">
      <div class="seat-img">
        <% if f.status == 0%>
          <%= link_to image_tag('seat.png', width: 180), reserve_form_path(f.id) %>
        <% else %>
          <%= image_tag('seat_soldout.png', width: 180) %>
        <% end %>
      </div>
      <div class="seat-label">
        <% case i % 5 + 1 %>
          <% when 1 %>
            S1
          <% when 2 %>
            S2
          <% when 3 %>
            A1
          <% when 4 %>
            A2
          <% else %>
            A3
        <% end %>
      </div>
    </div>
  <% end %>
  <p id="price">
    S seat 400 yen<br>
    A seat 300 yen
  </p>
  <h1>
    <%= image_tag 'logo.png' %>
  </h1>
</div>
